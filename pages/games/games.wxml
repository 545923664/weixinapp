<view wx:for="{{list}}">
    <view style="width:98%;margin-left:10rpx;height:120rpx;margin-top:10px;">
            <view style="float:left;width:15%;display:inline;">
                <image  style="width:150rpx;height:120rpx;margin-left:10rpx;"
                            src="http://p1.pstatp.com/list/190x124/11980006f42f57a8d8f0"/>
            </view>

            <view class="section1">
                <view class="flex-wrp1" style="flex-direction:column;">
                    <view  class="flex-wrp1" style="flex-direction:row;" >
                        <view  class="flex-item1">
                            {{item.roomname}}</view><!--最多8个汉字-->
                        <view class="flex-item11">
                    2/{{item.roompeoplenum}}</view>
                    </view>
                    <view class="flex-item2">
                    {{item.roomtitle}}
                    </view>
                </view>
            </view>
